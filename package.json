{
  "name": "openweathermap-ts",
  "version": "1.2.2",
  "description": "An abstract layer over openWeatherMap APIs",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "author": "Phillip Shim",
  "license": "MIT",
  "keywords": [
    "openweathermap-ts",
    "open-weather",
    "openweathermap",
    "weather",
    "typescript",
    "darkSky",
    "weather-api"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts --watch src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@types/node-fetch": "^2.5.7",
    "coveralls": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add ."
    }
  }
}
